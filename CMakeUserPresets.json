{
    "version": 3,
    "configurePresets": [
        {
            "name": "default",
            "inherits": "vcpkg",
            "environment": {
                "WORKSPACE_ROOT": "/workspaces/tdd-cpp",
                "VCPKG_ROOT": "$env{WORKSPACE_ROOT}/vcpkg",
                "VCPKG_DOWNLOADS": "$env{VCPKG_ROOT}/downloads",
                "DOWNLOADS": "$env{VCPKG_DOWNLOADS}",
                "VCPKG_FORCE_SYSTEM_BINARIES": "true"
            }
        }
    ]
}
